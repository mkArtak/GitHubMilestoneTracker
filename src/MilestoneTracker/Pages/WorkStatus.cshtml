<style type="text/css">
    .column-header {
        font-size: 1.2em;
        font-weight: bolder;
    }

    .row-first-item {
        font-weight: bold;
    }

    .row-item {
        text-align: center;
    }

    .row-bottom{
        font-size: 1.1em;
    }
</style>
<h2>Work</h2>
<table class="table-bordered">
    <thead>
        <tr>
            <td class="column-header">Member</td>
            <td class="column-header">Days of work</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td class="row-first-item">@item.Key</td>
            <td class="row-item">@item.Value</td>
        </tr>
    }

    <tr>
        <td class="row-bottom row-first-item">Total work left</td>
        <td class="row-bottom row-item">@Model.Sum(item=>item.Value)</td>
    </tr>
</table>