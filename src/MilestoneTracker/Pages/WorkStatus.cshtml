<style type="text/css">
    .column-header{
        font-weight: bolder;
    }

    .row-first-item{
        font-weight: bold;
    }

    .row-item {
        text-align: center;
    }
</style>
<h2>Work</h2>
<table class="table-bordered">
    <thead>
        <tr>
            <td class="column-header">Member</td>
            <td class="column-header">Days of work</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td class="row-first-item">@item.Key</td>
            <td class="row-item">@item.Value</td>
        </tr>
    }
</table>